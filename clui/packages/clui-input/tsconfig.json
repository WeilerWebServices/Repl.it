{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "lib": ["es2017", "esnext.asynciterable"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__"]
}
